{
  "name": "iot-safe-backend",
  "version": "1.0.0",
  "description": "Simple IoT Safe Container Backend with MQTT and InfluxDB",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:watch": "nodemon src/app.ts",
    "db:seed": "ts-node src/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.2",
    "mqtt": "^5.3.0",
    "@influxdata/influxdb-client": "^1.33.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1"
  }
}
